<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.protech.blindhelper.RadarFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/beacon_title"
        android:gravity="center"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:layout_weight="1"
        android:contentDescription="Название маяка"/>

    <TextView
        android:id="@+id/beacon_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:contentDescription="Описание маячка"
        android:gravity="center"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/beacon_location"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_margin="8dp"
        android:layout_weight="0.5"
        android:contentDescription="Месторасположение маячка"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/beacon_route"
        android:text="@string/route_to_beacon"
        android:layout_marginBottom="8dp"
        android:layout_weight="2" />

</LinearLayout>
